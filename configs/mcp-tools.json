{
  "$schema": "https://ralph.dev/schemas/mcp-tools.schema.json",
  "version": "1.0",
  "description": "MCP tools available to Ralph for PRD verification",
  "tools": {
    "figma": {
      "description": "Figma design comparison",
      "functions": [
        {"name": "mcp__figma__get_screenshot", "use": "Get screenshot of any Figma node"},
        {"name": "mcp__figma__get_design_context", "use": "Get code/specs from Figma node"}
      ],
      "useFor": ["Visual comparison", "Extracting exact colors/spacing"]
    },
    "browserTools": {
      "description": "Browser debugging and screenshots",
      "functions": [
        {"name": "mcp__browser-tools__takeScreenshot", "use": "Screenshot current browser tab"},
        {"name": "mcp__browser-tools__getConsoleLogs", "use": "Check for errors"},
        {"name": "mcp__browser-tools__getConsoleErrors", "use": "Get JS errors"},
        {"name": "mcp__browser-tools__runAccessibilityAudit", "use": "A11y checks"}
      ],
      "useFor": ["Visual verification", "Debugging", "Accessibility"]
    },
    "context7": {
      "description": "Library documentation lookup",
      "functions": [
        {"name": "mcp__Context7__resolve-library-id", "use": "Find library docs"},
        {"name": "mcp__Context7__query-docs", "use": "Get up-to-date documentation"}
      ],
      "useFor": ["Checking latest API usage"]
    },
    "claudeInChrome": {
      "description": "Browser automation (if available)",
      "functions": [
        {"name": "mcp__claude-in-chrome__computer", "use": "Click, type, screenshot"},
        {"name": "mcp__claude-in-chrome__navigate", "use": "Go to URLs"},
        {"name": "mcp__claude-in-chrome__read_page", "use": "Read page accessibility tree"}
      ],
      "useFor": ["Interactive testing", "Filling forms", "Triggering modals"]
    },
    "braveManager": {
      "description": "Internal Brave browser automation fallback",
      "functions": [
        {"name": "scripts/brave-manager.js audit", "use": "Logs and network activity"},
        {"name": "scripts/brave-manager.js screenshot", "use": "Visual verification"},
        {"name": "scripts/brave-manager.js html", "use": "DOM structure inspection"},
        {"name": "scripts/brave-manager.js click/type", "use": "Interactive automation"}
      ],
      "useFor": ["Fallback automation", "Brave-specific testing", "Network/Log auditing"]
    }
  }
}
